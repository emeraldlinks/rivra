{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": ".",                   // keep root as project root
    "outDir": "dist",
    "declaration": true,
    "declarationDir": "dist",         // all .d.ts files go to dist
    "types": ["node", "./ripple-env.d.ts"],
    "jsx": "preserve",
    "jsxImportSource": "ripple"
  },
  "include": [
    "packages/**/*.ts",
    "packages/**/*.d.ts",
    "src",
    "**/*.ripple",
    "cli.ts",
    "ripple-env.d.ts",
    "src/router/index.d.ts"
  ]
}
